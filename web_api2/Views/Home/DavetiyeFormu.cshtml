@model web_api2.Models.DavetiyeModel
@{
    ViewBag.Title = "DavetiyeFormu";
}

<div class="panel panel-success">
    <div class="panel-heading"><h4>Sen de Davetlisin!</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Ad :</label>
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Eposta :</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Katılım Durumu: :</label>
                @Html.DropDownListFor(x => x.KatılmaDurumu, new[]
           {
               new SelectListItem(){Text="Evet, Geliyoorum",
               Value=bool.TrueString},
               new SelectListItem(){Text="Hayır, Maalesef gelemeyeceğim",Value=bool.FalseString}
           },
               "Geliyor musun?", new { @class = "form-control" })
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Gönder" />
            </div>
        }
    </div>
</div>

